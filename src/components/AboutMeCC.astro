---
// data imports
import workExperience from "@/data/Jobs.ts"
import education from "@/data/education.ts"
import languages from "../data/languages.ts"
import hardSkills from "@/data/hardSkills"
import softSkills from "@/data/softSkills"

// component imports
import JobDetails from "./JobDetails.astro";
import EduDetail from "./EduDetail.astro";
import SkillCard from "./SkillCard.astro";
import LanguageCard from "./LanguageCard.astro";

// config import
//import {ME} from '@/config';

---

<div class="relative flex flex-col gap-8 text-n700 dark:text-n200 w-full mt-10 px-4">
    {/*Description or About me -- Section*/}
    <div class="flex flex-col gap-4 mb-4">
        <p>
            Soy un <b>Desarrollador Web</b> centrado en <b>Backend y PHP</b> con ganas de seguir aprendiendo y mejorando allá donde pueda aportar con mi trabajo.
        </p>
        <p>
            En mis ratos libres me gusta <b>leer</b>, jugar a <b>videojuegos</b> y soy el <b>Dungeon Master</b> en una partida de D&D con mis amigos desde hace 1 año.
        </p>
    </div>
    {/*Work experience section*/}
    <div class="mb-4">
        <h2 class="text-3xl font-bold mb-4 pb-2 border-b-2">Experiencia Laboral</h2>
        <div class="flex flex-col gap-6">
            {workExperience.map((job) => (
                    <JobDetails jobData={job}/>
            ))}
        </div>
    </div>
    {/*Education section*/}
    <div class="mb-4">
        <h2 class="text-3xl font-bold mb-4 pb-2 border-b-2">Estudios</h2>
        <div class="flex flex-col gap-8">
            {education.map((edu) => (
                    <EduDetail eduData={edu}/>
            ))}
        </div>
    </div>
    {/*Skills section*/}
    <div class="mb-4">
        <h2 class="text-3xl font-bold mb-4 pb-2 border-b-2">Hard Skills Principales</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {hardSkills.map((skill) => (
                    <SkillCard {...skill} showDescription={false}/>
            ))}
        </div>
    </div>
    {/*Hobbies section*/}
    <div class="mb-4">
        <h2 class="text-2xl font-bold mb-4 pb-2 border-b-2">Soft Skills</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {softSkills.map((skill) => (
                    <SkillCard {...skill} showDescription={false} fillColor={true}/>
            ))}
        </div>
    </div>
    {/*Languages section*/}
    <div class="mb-4">
        <h2 class="text-2xl font-bold mb-4 pb-2 border-b-2">Idiomas</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {languages.map((lang) => (
                    <LanguageCard {...lang} showDescription={false}/>
            ))}
        </div>
    </div>
</div>